/* 表单内容区域 */
.group-title.data-v-c22bdff0 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}
.upload-desc.data-v-c22bdff0 {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

/* 图片网格布局 */
.image-grid.data-v-c22bdff0 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}
.image-grid .image-item.data-v-c22bdff0 {
  position: relative;
  aspect-ratio: 1/1;
  border-radius: 12rpx;
  overflow: hidden;
}
.image-grid .image-item image.data-v-c22bdff0 {
  width: 100%;
  height: 100%;
}
.image-grid .image-item .del-btn.data-v-c22bdff0 {
  position: absolute;
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 36rpx;
  border-bottom-left-radius: 12rpx;
  font-size: 32rpx;
}
.image-grid .upload-btn.data-v-c22bdff0 {
  aspect-ratio: 1/1;
  background: #F9F9FA;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}
.image-grid .upload-btn text.data-v-c22bdff0 {
  font-size: 22rpx;
  color: #bbb;
}

/* 指南区域 */
.guide-box.data-v-c22bdff0 {
  background: #F8F8F8;
  padding: 24rpx;
  border-radius: 12rpx;
}
.guide-box .guide-title.data-v-c22bdff0 {
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}
.guide-box .guide-txt.data-v-c22bdff0 {
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
  display: block;
}

/* 底部按钮 */
.footer.data-v-c22bdff0 {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 24rpx 40rpx 50rpx;
  box-sizing: border-box;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.footer .submit-btn.data-v-c22bdff0 {
  background: linear-gradient(135deg, #FF9D4D, #FF8600);
  color: #fff;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(255, 134, 0, 0.2);
}
.footer .submit-btn.data-v-c22bdff0::after {
  border: none;
}
.footer .submit-btn.data-v-c22bdff0:active {
  opacity: 0.8;
}