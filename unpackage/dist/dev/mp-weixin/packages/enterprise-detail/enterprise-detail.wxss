/* 水平间距 */
.detail-container.data-v-9f5eb755 {
  background-color: #F7F8FA;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 1. 顶部视觉区设计 */
.header-visual.data-v-9f5eb755 {
  position: relative;
  height: 370rpx;
  background: #fff;
}
.header-visual .bg-img.data-v-9f5eb755 {
  width: 100%;
  height: 200rpx;
  filter: blur(4rpx);
}
.header-visual .bg-gradient.data-v-9f5eb755 {
  width: 100%;
  height: 200rpx;
  background: linear-gradient(135deg, #FF8600, #FFB347);
}
.header-visual .header-content.data-v-9f5eb755 {
  position: absolute;
  top: 120rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header-visual .header-content .main-logo.data-v-9f5eb755 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.header-visual .header-content .ent-name.data-v-9f5eb755 {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-top: 16rpx;
}
.header-visual .header-content .ent-slogan.data-v-9f5eb755 {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}
.content-body.data-v-9f5eb755 {
  padding: 20rpx 30rpx;
}

/* 通用卡片设计 */
.section-card.data-v-9f5eb755 {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.02);
}
.section-title.data-v-9f5eb755 {
  border-bottom: 1rpx solid #F5F5F5;
  padding-bottom: 20rpx;
  margin-bottom: 24rpx;
}
.section-title .t-txt.data-v-9f5eb755 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.info-item.data-v-9f5eb755 {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.info-item .label.data-v-9f5eb755 {
  color: #666;
  white-space: nowrap;
}
.info-item .val.data-v-9f5eb755 {
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
.info-item .val.link.data-v-9f5eb755 {
  color: #FF8600;
  text-decoration: underline;
}
.brand-intro .intro-content.data-v-9f5eb755 {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}
.brand-intro .meta-row.data-v-9f5eb755 {
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.brand-intro .meta-label.data-v-9f5eb755 {
  color: #999;
}
.brand-intro .meta-val.data-v-9f5eb755 {
  color: #333;
}
.brand-intro .tag-row.data-v-9f5eb755 {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 20rpx;
}
.brand-intro .tag-item.data-v-9f5eb755 {
  background: #FFF5EE;
  color: #FF8600;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}
.sub-group-title.data-v-9f5eb755 {
  font-size: 24rpx;
  font-weight: bold;
  color: #999;
  margin: 30rpx 0 20rpx;
  background: #F8F8F8;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}
.qr-btn.data-v-9f5eb755 {
  font-size: 22rpx;
  color: #FF8600;
  border: 1rpx solid #FF8600;
  padding: 4rpx 16rpx;
  border-radius: 30rpx;
}

/* 门店模块样式 */
.store-item.data-v-9f5eb755,
.offline-item.data-v-9f5eb755 {
  display: flex;
  align-items: center;
  background: #FAFAFA;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #F0F0F0;
}
.store-item .store-icon.data-v-9f5eb755,
.store-item .loc-icon.data-v-9f5eb755,
.offline-item .store-icon.data-v-9f5eb755,
.offline-item .loc-icon.data-v-9f5eb755 {
  margin-right: 20rpx;
  flex-shrink: 0;
}
.store-item .store-info.data-v-9f5eb755,
.offline-item .store-info.data-v-9f5eb755 {
  flex: 1;
  min-width: 0;
}
.store-item .store-info .s-name.data-v-9f5eb755,
.offline-item .store-info .s-name.data-v-9f5eb755 {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
}
.store-item .store-info .s-platform.data-v-9f5eb755,
.store-item .store-info .s-addr.data-v-9f5eb755,
.offline-item .store-info .s-platform.data-v-9f5eb755,
.offline-item .store-info .s-addr.data-v-9f5eb755 {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.store-item .enter-btn.data-v-9f5eb755,
.store-item .nav-btn.data-v-9f5eb755,
.offline-item .enter-btn.data-v-9f5eb755,
.offline-item .nav-btn.data-v-9f5eb755 {
  flex-shrink: 0;
  background: #FF8600;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 40rpx;
}
.store-item .nav-btn.data-v-9f5eb755,
.offline-item .nav-btn.data-v-9f5eb755 {
  background: #fff;
  border: 1rpx solid #FF8600;
  color: #FF8600;
}
.expand-btn.data-v-9f5eb755 {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 品牌图库与视频 */
.gallery-grid.data-v-9f5eb755 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
}
.gallery-grid .grid-img.data-v-9f5eb755 {
  width: 100%;
  height: 180rpx;
  border-radius: 8rpx;
  background: #f0f0f0;
}
.view-all-gallery.data-v-9f5eb755 {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.video-section .ent-video.data-v-9f5eb755 {
  width: 100%;
  height: 380rpx;
  border-radius: 16rpx;
  background: #000;
}
.video-section .video-title.data-v-9f5eb755 {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  text-align: center;
}

/* 底部操作 */
.footer-action.data-v-9f5eb755 {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 40rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}
.footer-action .card-btn.data-v-9f5eb755 {
  background: #FF8600;
  color: #fff;
  border-radius: 50rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  gap: 10rpx;
}
.footer-action .card-btn.data-v-9f5eb755::after {
  border: none;
}

/* 二维码弹窗 */
.qr-popup-box.data-v-9f5eb755 {
  background: #fff;
  width: 520rpx;
  padding: 40rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.qr-popup-box .qr-title.data-v-9f5eb755 {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.qr-popup-box .qr-image.data-v-9f5eb755 {
  width: 360rpx;
  height: 360rpx;
  margin-bottom: 20rpx;
  background: #f9f9f9;
}
.qr-popup-box .qr-tip.data-v-9f5eb755 {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}
.qr-popup-box .qr-btns.data-v-9f5eb755 {
  width: 100%;
  display: flex;
  gap: 20rpx;
}
.qr-popup-box .qr-btns .q-btn.data-v-9f5eb755 {
  flex: 1;
  font-size: 26rpx;
  border-radius: 40rpx;
}
.qr-popup-box .qr-btns .q-btn.data-v-9f5eb755::after {
  border: none;
}
.qr-popup-box .qr-btns .save.data-v-9f5eb755 {
  background: #FF8600;
  color: #fff;
}
.qr-popup-box .qr-btns .close.data-v-9f5eb755 {
  background: #f5f5f5;
  color: #666;
}
.m-t-20.data-v-9f5eb755 {
  margin-top: 20rpx;
}
.m-t-30.data-v-9f5eb755 {
  margin-top: 30rpx;
}
.m-l-10.data-v-9f5eb755 {
  margin-left: 10rpx;
}
.flex-1.data-v-9f5eb755 {
  flex: 1;
}