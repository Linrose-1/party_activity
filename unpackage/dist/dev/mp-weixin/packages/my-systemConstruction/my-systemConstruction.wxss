
	/* 主题色 */
.data-v-d9b70221:root {
		--theme-color: #FF852B;
}
.system-construction-app.data-v-d9b70221 {
		background-color: #f7f8fa;
		min-height: 100vh;
		padding-bottom: 180rpx;
		/* 为FAB按钮留出空间 */
}

	/* 1. 顶部搜索区 */
.header.data-v-d9b70221 {
		background: linear-gradient(135deg, #FF852B, #FFAC70);
		padding: 30rpx 30rpx 40rpx;
		border-radius: 0 0 40rpx 40rpx;
}
.page-title.data-v-d9b70221 {
		font-size: 44rpx;
		font-weight: bold;
		color: white;
		margin-bottom: 30rpx;
		text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
.search-container.data-v-d9b70221 {
		display: flex;
		align-items: center;
		background: #ffffff;
		border-radius: 50rpx;
		padding: 10rpx 20rpx;
}
.search-input.data-v-d9b70221 {
		flex: 1;
		font-size: 28rpx;
		margin-left: 16rpx;
}
.search-button.data-v-d9b70221 {
		background: #FF852B;
		color: white;
		border-radius: 30rpx;
		padding: 10rpx 30rpx;
		font-size: 28rpx;
		margin-left: 20rpx;
		line-height: 1.5;
}
.search-button.data-v-d9b70221::after {
		border: none;
}

	/* 2. 导航Tabs */
.tabs.data-v-d9b70221 {
		display: flex;
		background: white;
		margin: 30rpx;
		border-radius: 16rpx;
		box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}
.tab.data-v-d9b70221 {
		flex: 1;
		text-align: center;
		padding: 24rpx 0;
		font-size: 30rpx;
		color: #666;
		position: relative;
}
.tab.active.data-v-d9b70221 {
		color: #FF852B;
		font-weight: bold;
}
.tab.active.data-v-d9b70221::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 60rpx;
		height: 6rpx;
		background-color: #FF852B;
		border-radius: 3rpx;
}

	/* 3. 建议列表 */
.suggestion-list.data-v-d9b70221 {
		padding: 0 30rpx;
}
.suggestion-card.data-v-d9b70221 {
		background: white;
		border-radius: 20rpx;
		padding: 30rpx;
		margin-bottom: 30rpx;
		box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
}
.card-header.data-v-d9b70221 {
		display: flex;
		align-items: center;
		margin-bottom: 24rpx;
}
.avatar.data-v-d9b70221 {
		width: 80rpx;
		height: 80rpx;
		border-radius: 50%;
		margin-right: 20rpx;
		background-color: #eee;
		flex-shrink: 0;
}
.user-info.data-v-d9b70221 {
		flex: 1;
}
.user-name.data-v-d9b70221 {
		font-size: 30rpx;
		font-weight: 600;
		color: #333;
}
.suggestion-time.data-v-d9b70221 {
		font-size: 24rpx;
		color: #999;
}
.card-body.data-v-d9b70221 {}
.suggestion-title.data-v-d9b70221 {
		font-size: 32rpx;
		font-weight: bold;
		color: #222;
		margin-bottom: 16rpx;
}
.suggestion-content.data-v-d9b70221 {
		font-size: 28rpx;
		color: #555;
		line-height: 1.6;
		margin-bottom: 20rpx;
		white-space: pre-wrap;
}
.suggestion-image.data-v-d9b70221 {
		width: 100%;
		border-radius: 12rpx;
		margin-top: 10rpx;
}
.loading-status.data-v-d9b70221 {
		padding: 20rpx 0;
}
.no-data-message.data-v-d9b70221 {
		text-align: center;
		color: #999;
		padding: 40rpx 0;
}

	/* 4. 新建建议按钮 (FAB) */
.fab-container.data-v-d9b70221 {
		position: fixed;
		bottom: 100rpx;
		right: 40rpx;
		background: linear-gradient(135deg, #FF852B, #FFAC70);
		color: white;
		border-radius: 50rpx;
		padding: 20rpx 40rpx;
		display: flex;
		align-items: center;
		box-shadow: 0 8rpx 24rpx rgba(255, 133, 43, 0.4);
		z-index: 10;
		transition: transform 0.2s ease-in-out;
}
.fab-container.data-v-d9b70221:active {
		transform: scale(0.95);
}
.fab-text.data-v-d9b70221 {
		font-size: 28rpx;
		font-weight: 500;
		margin-left: 10rpx;
}
