	/* 2. 导航Tabs */
.tabs.data-v-d9b70221 {
		display: flex;
		background: white;
		margin: 30rpx;
		border-radius: 16rpx;
		box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}
.tab.data-v-d9b70221 {
		flex: 1;
		text-align: center;
		padding: 24rpx 0;
		font-size: 30rpx;
		color: #666;
		position: relative;
}
.tab.active.data-v-d9b70221 {
		color: #FF852B;
		font-weight: bold;
}
.tab.active.data-v-d9b70221::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 60rpx;
		height: 6rpx;
		background-color: #FF852B;
		border-radius: 3rpx;
}

