}
.state-box .invite-now.data-v-5434b9df {
  margin-top: 60rpx;
  background: linear-gradient(to right, #FF6E00, #FF9546);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  width: 320rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 16rpx rgba(255, 110, 0, 0.3);
}