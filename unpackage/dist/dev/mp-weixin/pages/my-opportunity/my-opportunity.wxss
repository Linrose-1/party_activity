		grid-template-columns: repeat(3, 1fr);
}
.image-wrapper.data-v-481e0091 {
		aspect-ratio: 1 / 1;
		/* 多图时，保持1:1的正方形比例 */
}

	/* Case 1: 只有 1 张图片 */
.images-count-1 .image-wrapper.data-v-481e0091 {
		grid-column: 1 / -1;
		/* 占据整行 */
		aspect-ratio: unset;
		/* 移除正方形限制，让图片以原始比例显示 */
}

