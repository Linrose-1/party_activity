/* 悬浮分享按钮 */
.share-fab.data-v-30894501 {
  position: fixed;
  top: 180rpx;
  right: 30rpx;
  width: 90rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #3a7bd5, #00d2ff);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
