/* 水平间距 */
/* 水平间距 */
.container.data-v-12e513cf {
  background-color: #f8f9fa;
  padding-bottom: 120rpx;
  min-height: 100vh;
}

/* 顶部导航 */
.header.data-v-12e513cf {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  background: linear-gradient(135deg, #FF6B00 0%, #FF8C00 100%);
  color: white;
  padding: 30rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}
.header-top.data-v-12e513cf {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 30rpx;
}
.title.data-v-12e513cf {
  font-size: 40rpx;
  font-weight: 600;
}
.search-bar.data-v-12e513cf {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  /* 1. 添加一个半透明的白色边框 */
  box-shadow: inset 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  /* 2. 添加一个轻微的内阴影，增加凹陷感 */
  transition: background 0.3s, box-shadow 0.3s;
  /* 3. 添加过渡效果 */
  /* (可选) 用户聚焦输入框时，给一点反馈 */
}
.search-bar.data-v-12e513cf:focus-within {
  background: rgba(255, 255, 255, 0.3);
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}
.search-bar input.data-v-12e513cf {
  flex: 1;
  border: none;
  background: transparent;
  color: white;
  font-size: 28rpx;
  margin-left: 16rpx;
  height: 50rpx;
}
.search-bar .placeholder.data-v-12e513cf {
  color: white !important;
}

/* 轮播图样式 */
.swiper-section.data-v-12e513cf {
  margin: 20rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.swiper.data-v-12e513cf {
  height: 300rpx;
}
.swiper-item.data-v-12e513cf {
  position: relative;
  width: 100%;
  height: 100%;
}
.swiper-image.data-v-12e513cf {
  width: 100%;
  height: 100%;
}
.swiper-title.data-v-12e513cf {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  pointer-events: none;
}

/* 筛选区域 */
.collapse-title.data-v-12e513cf {
  color: #FF6B00;
}
.filters.data-v-12e513cf {
  padding: 0 32rpx;
  background: white;
  border-bottom: 2rpx solid #eee;
}
.filter-header.data-v-12e513cf {
  display: flex;
  justify-content: flex-end;
  /* 让内部元素靠右对齐 */
  margin-bottom: 20rpx;
  /* 与下方的筛选器拉开一点距离 */
}
.reset-btn.data-v-12e513cf {
  background-color: #f0f0f0;
  color: #666;
  border: 1rpx solid #e0e0e0;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  margin: 0;
  margin-right: 40rpx;
}
.reset-btn.data-v-12e513cf::after {
  border: none;
}
.reset-btn .uni-icons.data-v-12e513cf {
  margin-right: 8rpx;
}
.uni-list.data-v-12e513cf {
  margin: 15rpx auto;
}
.uni-list .uni-list-cell.data-v-12e513cf {
  display: flex;
  align-items: center;
}
.uni-list .uni-list-cell-left.data-v-12e513cf {
  padding: 10rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}
.uni-list .uni-list-cell-db.data-v-12e513cf {
  margin-left: 10rpx;
  padding: 10rpx;
  background-color: #FFF0E5;
  flex: 1;
  min-width: 0;
}
.uni-list .uni-list-cell-db .uni-input.data-v-12e513cf {
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  width: 100%;
}
.uni-list .uni-list-cell-db .uni-input text.data-v-12e513cf,
.uni-list .uni-list-cell-db .uni-input .placeholder.data-v-12e513cf {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.uni-list .uni-list-cell-db .uni-input .arrow.data-v-12e513cf {
  color: #999;
  font-size: 32rpx;
  margin-left: auto;
  padding: 0 10rpx;
}

/* 聚会列表 */
.activity-list.data-v-12e513cf {
  padding: 0 32rpx;
}

/* 暂无更多内容提示 */
.no-more-content.data-v-12e513cf {
  text-align: center;
  color: #999;
  padding: 30rpx 0;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 底部操作栏 */
.action-bar.data-v-12e513cf {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  padding: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}
.action-btn.data-v-12e513cf {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx;
  border-radius: 16rpx;
  font-weight: 500;
  font-size: 32rpx;
}
.action-btn text.data-v-12e513cf {
  margin-left: 12rpx;
}
.register-btn.data-v-12e513cf {
  background: linear-gradient(to right, #FF8C00, #FF6B00);
  color: white;
}