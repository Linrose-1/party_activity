
	/* --- 页面基础 --- */
.container.data-v-2f1ef635 {
		padding: 30rpx;
		background-color: #f9f9f9;
}

	/* --- 1. 数字身份模块 (user-header) --- */
.user-header.data-v-2f1ef635 {
		background: linear-gradient(135deg, #FF8C00, #FF6B00);
		padding: 30rpx;
		border-radius: 20rpx;
		color: white;
		display: flex;
		flex-direction: column;
		margin-bottom: 30rpx;
}

	/* 1.1 模块头部：标题与操作按钮 */
.section-header.data-v-2f1ef635 {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 30rpx;
		width: 100%;
}
.section-title-main.data-v-2f1ef635 {
		font-size: 32rpx;
		font-weight: bold;
		color: #FF8000;
}
.white-text.data-v-2f1ef635 {
		color: white;
}
.header-actions.data-v-2f1ef635 {
		display: flex;
		gap: 20rpx;
}
.header-action-btn.data-v-2f1ef635 {
		font-size: 26rpx;
		color: rgba(255, 255, 255, 0.9);
		background: rgba(255, 255, 255, 0.2);
		padding: 8rpx 18rpx;
		border-radius: 30rpx;
}

	/* ==================== 【【【核心修复】】】 ==================== */
	/* 1.2 用户信息主体 */
.user-info-wrapper.data-v-2f1ef635 {
		width: 100%;
		display: flex;
		flex-direction: column;
		/* (1) 关键：改为垂直堆叠 */
}
.user-info-main.data-v-2f1ef635 {
		display: flex;
		align-items: center;
		width: 100%;
		/* 确保 main 部分撑满宽度 */
}
.avatar.data-v-2f1ef635 {
		width: 140rpx;
		height: 140rpx;
		border-radius: 10rpx;
		overflow: hidden;
		margin-right: 30rpx;
		flex-shrink: 0;
		border: 4rpx solid rgba(255, 255, 255, 0.3);
}
.avatar-img.data-v-2f1ef635 {
		width: 100%;
		height: 100%;
		object-fit: cover;
}
.user-details.data-v-2f1ef635 {
		flex: 1;
		min-width: 0;
}
.user-name.data-v-2f1ef635 {
		font-size: 36rpx;
		font-weight: bold;
		display: flex;
		align-items: center;
		/* 【新增】确保父容器也能处理溢出 */
		overflow: hidden;
		gap: 10rpx;
}

	/* 【新增】专门为昵称文本添加截断样式 */
.nickname-text.data-v-2f1ef635 {
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		/* 【关键】让它可以被压缩，给徽章留出空间 */
		flex-shrink: 1;
		min-width: 0;
		/* 配合 flex-shrink */
}
.badge.data-v-2f1ef635 {
		background: #ffd700;
		color: #8a6d00;
		padding: 6rpx 14rpx;
		border-radius: 20rpx;
		/* margin-left: 10rpx; */
		font-size: 22rpx;
		flex-shrink: 0;
		white-space: nowrap;
}
.social-badge.data-v-2f1ef635 {
		background: #e0f2fe;
		/* 一个柔和的蓝色 */
		color: #0c5494;
		/* 深蓝色文字 */
}
.user-title.data-v-2f1ef635,
	.user-company.data-v-2f1ef635 {
		font-size: 24rpx;
		margin-top: 6rpx;
		opacity: 0.9;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
}
.user-id-display.data-v-2f1ef635 {
		font-size: 22rpx;
		color: rgba(255, 255, 255, 0.7);
		background-color: rgba(0, 0, 0, 0.1);
		padding: 4rpx 12rpx;
		border-radius: 10rpx;
		align-self: flex-end;
		/* (2) 关键：使其在自己的行内靠右 */
		margin-top: 10rpx;
		/* (3) 关键：与上方信息拉开距离 */
}

	/* ========================================================== */

	/* 1.3 账户信息网格 */
.account-grid.data-v-2f1ef635 {
		display: grid;
		/* 【优化 3】关键样式修改：从 4 列改为 5 列 */
		grid-template-columns: repeat(5, 1fr);
		gap: 10rpx;
		/* 可以适当减小间距以容纳更多项 */
		margin-top: 30rpx;
		padding-top: 30rpx;
		border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}
.account-item.data-v-2f1ef635 {
		text-align: center;
		padding: 10rpx 0;
		border-radius: 12rpx;
		transition: background-color 0.2s;
}
.account-item.data-v-2f1ef635:active {
		background-color: rgba(0, 0, 0, 0.1);
}
.account-value.data-v-2f1ef635 {
		font-size: 34rpx;
		/* 可以适当减小字体大小 */
		color: #fff;
		font-weight: bold;
}
.account-label.data-v-2f1ef635 {
		font-size: 22rpx;
		/* 可以适当减小字体大小 */
		color: rgba(255, 255, 255, 0.8);
}

	/* 1.4 未登录状态 */
	/* 1.4 未登录状态 */
.login-prompt.data-v-2f1ef635 {
		display: flex;
		align-items: center;
		padding: 20rpx 0;
}
.login-prompt-avatar.data-v-2f1ef635 {
		width: 140rpx;
		/* 保持原样 */
		height: 140rpx;
		/* 保持原样 */
		border-radius: 50%;
		background-color: rgba(255, 255, 255, 0.9);
		display: flex;
		align-items: center;
		justify-content: center;
		margin-right: 20rpx;
		flex-shrink: 0;
		/* 防止被压缩 */
}

	/* 登录提示文字样式 */
.login-prompt-text.data-v-2f1ef635 {
		font-size: 36rpx;
		font-weight: bold;
		color: white;
}

	/* 右箭头样式，使用 margin-left: auto 自动推到最右侧 */
.login-prompt-arrow.data-v-2f1ef635 {
		margin-left: auto;
		font-size: 40rpx;
		color: rgba(255, 255, 255, 0.7);
}

