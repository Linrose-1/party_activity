  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background: linear-gradient(135deg, #FF8C00, #FF7600);
  box-shadow: 0 10rpx 30rpx rgba(255, 118, 0, 0.3);
  transition: all 0.3s ease;
}
.login-btn[disabled].data-v-1cf27b2a {
  background: #fabd8d;
  box-shadow: none;
  color: #fff;
  opacity: 0.8;
}
.login-btn.data-v-1cf27b2a::after {
  border: none;
}