.form-wrapper.data-v-1cf27b2a {
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 20rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
}
.form-item.data-v-1cf27b2a {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.form-item.data-v-1cf27b2a:last-child {
  border-bottom: none;
}
.form-item .label.data-v-1cf27b2a {
  width: 150rpx;
  font-size: 30rpx;
  color: #333;
  margin-left: 20rpx;
}
.form-item .input.data-v-1cf27b2a {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.form-item .placeholder.data-v-1cf27b2a {
  color: #ccc;
}
.form-item .input-display.data-v-1cf27b2a {
  font-size: 30rpx;
  color: #333;
}
.form-item .get-phone-btn.data-v-1cf27b2a,
.form-item .get-name-btn.data-v-1cf27b2a {
  flex: 1;
  background: none;
  border: none;
  text-align: left;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  color: #007aff;
  line-height: 1.5;
}
.form-item .get-phone-btn.data-v-1cf27b2a::after,
.form-item .get-name-btn.data-v-1cf27b2a::after {
  border: none;
}
