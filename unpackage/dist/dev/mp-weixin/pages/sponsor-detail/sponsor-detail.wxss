/* 水平间距 */
.page.data-v-5a2ebc52 {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 头部 */
.header-banner.data-v-5a2ebc52 {
  height: 400rpx;
  position: relative;
}
.header-banner .bg-img.data-v-5a2ebc52 {
  width: 100%;
  height: 100%;
}
.header-banner .header-mask.data-v-5a2ebc52 {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.header-banner .header-mask .sponsor-logo.data-v-5a2ebc52 {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.header-banner .header-mask .sp-name.data-v-5a2ebc52 {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.header-banner .header-mask .sp-loc.data-v-5a2ebc52 {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 卡片通用 */
.card-section.data-v-5a2ebc52 {
  background: #fff;
  margin: 24rpx;
  padding: 30rpx;
  border-radius: 20rpx;
}
.card-section .section-title.data-v-5a2ebc52 {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 8rpx solid #FF6F00;
  color: #333;
}

/* 核心高亮数据 */
.sponsor-highlight-box.data-v-5a2ebc52 {
  background: #fff9f0;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 1rpx solid #ffe4ba;
}
.highlight-row.data-v-5a2ebc52 {
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
}
.highlight-row .h-item.data-v-5a2ebc52 {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.highlight-row .h-item .label.data-v-5a2ebc52 {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}
.highlight-row .h-item .value.data-v-5a2ebc52 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.highlight-row .h-item .value.money.data-v-5a2ebc52 {
  color: #FF6F00;
  font-size: 40rpx;
  font-family: DINAlternate-Bold, sans-serif;
  /* 如果有数字字体 */
}
.highlight-row .v-line.data-v-5a2ebc52 {
  width: 2rpx;
  height: 50rpx;
  background: #e0e0e0;
  margin: 0 20rpx;
}
.row-divider.data-v-5a2ebc52 {
  height: 2rpx;
  background: #eee;
  /* 或者 dashed */
  margin: 20rpx 0;
  width: 100%;
}
.highlight-goods-col.data-v-5a2ebc52 {
  display: flex;
  flex-direction: column;
}
.highlight-goods-col .label.data-v-5a2ebc52 {
  font-size: 24rpx;
  color: #999;
  display: block;
}
.highlight-goods-col .label.mb-10.data-v-5a2ebc52 {
  margin-bottom: 16rpx;
}
.highlight-goods-col .goods-list.data-v-5a2ebc52 {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.highlight-goods-col .goods-item-tag.data-v-5a2ebc52 {
  background: #fff;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  border: 1rpx solid #e1f3d8;
  /* 淡淡的绿色边框 */
}
.highlight-goods-col .empty-goods.data-v-5a2ebc52 {
  font-size: 26rpx;
  color: #ccc;
  font-style: italic;
}
.intro-text.data-v-5a2ebc52 {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}
.gallery-swiper.data-v-5a2ebc52 {
  width: 100%;
  height: 360rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.gallery-swiper .gallery-img.data-v-5a2ebc52 {
  width: 100%;
  height: 100%;
}
.contact-row.data-v-5a2ebc52 {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.contact-row .contact-avatar.data-v-5a2ebc52 {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
}
.contact-row .contact-name.data-v-5a2ebc52 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}