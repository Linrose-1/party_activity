	/* =========================
	 * 2. 导航栏 (Tabs) 样式
	 * ========================= */
.section-title.data-v-07e72d3c {
		font-size: 40rpx;
		font-weight: 700;
		padding: 40rpx 40rpx 30rpx;
		color: #FF6A00;
		display: flex;
		align-items: center;
}
.section-title.data-v-07e72d3c::before {
		content: "";
		display: inline-block;
		width: 8rpx;
		height: 40rpx;
		background: #FF6A00;
		border-radius: 4rpx;
		margin-right: 20rpx;
}
.tabs.data-v-07e72d3c {
		display: flex;
		background: white;
		padding: 0 40rpx;
		border-bottom: 2rpx solid #eee;
		position: -webkit-sticky;
		position: sticky;
		top: 0;
		z-index: 10;
}
.tab.data-v-07e72d3c {
		flex: 1;
		text-align: center;
		padding: 40rpx 0;
		font-size: 28rpx;
		color: #666;
		position: relative;
		transition: color 0.3s, font-weight 0.3s;
}
.tab.active.data-v-07e72d3c {
		color: #FF6A00;
		font-weight: 600;
}
.tab.active.data-v-07e72d3c::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 48rpx;
		height: 6rpx;
		background: #FF6A00;
		border-radius: 6rpx;
}
.post-button.data-v-07e72d3c {
		background: linear-gradient(to right, #FF6A00, #FF8C37);
		color: white;
		border: none;
		border-radius: 40rpx;
		padding: 0 32rpx;
		margin: 15rpx 0;
		font-size: 28rpx;
		font-weight: 600;
		box-shadow: 0 4rpx 12rpx rgba(255, 106, 0, 0.3);
		display: flex;
		align-items: center;
		margin-left: 30rpx;
}
.post-button uni-icons.data-v-07e72d3c {
		margin-right: 10rpx;
}

	/* =========================
	 * 3. 帖子卡片 (Post Card) 样式
	 * ========================= */
.post-list.data-v-07e72d3c {
		padding: 20rpx 30rpx;
}
.post-card.data-v-07e72d3c {
		background: white;
		border-radius: 30rpx;
		padding: 40rpx;
		margin-bottom: 30rpx;
		box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
		transition: transform 0.3s, box-shadow 0.3s;
}
.post-card.data-v-07e72d3c:active {
		transform: translateY(-6rpx);
		box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

	/* 3.1 卡片头部 */
.post-header.data-v-07e72d3c {
		display: flex;
		align-items: center;
}
.avatar.data-v-07e72d3c {
		width: 90rpx;
		height: 90rpx;
		border-radius: 10rpx;
		margin-right: 24rpx;
}
.user-info.data-v-07e72d3c {
		flex: 1;
		min-width: 0;
}
.user-name.data-v-07e72d3c {
		font-weight: 600;
		font-size: 32rpx;
		margin-bottom: 6rpx;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
}
.post-time.data-v-07e72d3c {
		font-size: 26rpx;
		color: #888;
}
.follow-button.data-v-07e72d3c {
		background-color: #FF6A00;
		color: white;
		border: none;
		border-radius: 40rpx;
		padding: 10rpx 28rpx;
		font-size: 26rpx;
		font-weight: 500;
		margin-left: 20rpx;
		white-space: nowrap;
		line-height: 1.5;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: all 0.2s ease;
		box-shadow: 0 2rpx 8rpx rgba(255, 106, 0, 0.2);
}
.follow-button.followed.data-v-07e72d3c {
		background: #e0e0e0;
		color: #666;
		box-shadow: none;
}

	/* 3.2 卡片内容 */
.post-content-title.data-v-07e72d3c {
		font-size: 30rpx;
		line-height: 1.5;
		margin-top: 30rpx;
		color: #444;
		font-weight: 700;
}
.post-content-preview.data-v-07e72d3c {
		font-size: 28rpx;
		line-height: 1.6;
		margin-top: 16rpx;
		color: #666;
		/* 允许内容按空格或换行符自动换行 */
		white-space: pre-wrap;
		word-break: break-all;
}

	/* 【新增】“展开”链接的样式 */
.expand-link.data-v-07e72d3c {
		color: #007AFF;
		/* 蓝色，类似于微信的链接颜色 */
		margin-left: 8rpx;
		display: inline-block;
		/* 确保它像个按钮一样可交互 */
}
.post-images.data-v-07e72d3c {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 16rpx;
		margin-top: 30rpx;
}
.image-wrapper.data-v-07e72d3c {
		width: 100%;
		aspect-ratio: 1 / 1;
		border-radius: 12rpx;
		overflow: hidden;
}
.post-image.data-v-07e72d3c {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
}

	/* ==================== 视频容器和播放器样式 ==================== */
.post-video-container.data-v-07e72d3c {
		width: 100%;
		/* 建议给视频一个最大高度，防止视频比例过高导致页面过长 */
		/* max-height: 400rpx; */
		aspect-ratio: 16 / 9;
		border-radius: 12rpx;
		overflow: hidden;
		margin-top: 30rpx;
		background-color: #000;
		/* 视频加载时的背景色 */
		position: relative;
		/* 用于可能的封面图或播放按钮定位 */
}
.post-video.data-v-07e72d3c {
		width: 100%;
		height: 100%;
		/* 视频将填充容器 */
		display: block;
}

	/* ===================================================================== */
.tags.data-v-07e72d3c {
		display: flex;
		flex-wrap: wrap;
		gap: 16rpx;
		margin-top: 30rpx;
}
.tag.data-v-07e72d3c {
		background: #fff0e6;
		color: #FF6A00;
		padding: 10rpx 24rpx;
		border-radius: 40rpx;
		font-size: 26rpx;
}

	/* 3.3 卡片交互 */
.post-actions.data-v-07e72d3c {
		display: flex;
		justify-content: space-around;
		align-items: center;
		border-top: 2rpx solid #f0f0f0;
		padding-top: 30rpx;
		margin-top: 30rpx;
}
.action.data-v-07e72d3c {
		display: flex;
		align-items: center;
		color: #666;
		font-size: 28rpx;
		transition: color 0.2s;
}
.action uni-icons.data-v-07e72d3c {
		margin-right: 12rpx;
}
.action span.data-v-07e72d3c {
		line-height: 1;
}
.action.data-v-07e72d3c:active {
		opacity: 0.7;
}
.action.active.data-v-07e72d3c {
		/* 激活状态的通用样式，具体颜色由内联 color 属性控制 */
		font-weight: 500;
}
.action.delete-btn.data-v-07e72d3c {
		padding: 0 10rpx;
}

	/* =========================
	 * 4. 列表状态提示样式
	 * ========================= */
.loading-status.data-v-07e72d3c {
		width: 100%;
		padding: 20rpx 0;
}
.content-placeholder.data-v-07e72d3c {
		margin-top: 30rpx;
		padding: 60rpx 40rpx;
		text-align: center;
}
.placeholder-text.data-v-07e72d3c {
		font-size: 30rpx;
		color: #666;
		margin-bottom: 40rpx;
}
.placeholder-button.data-v-07e72d3c {
		background: linear-gradient(135deg, #FF6A00, #FF8C37);
