/* 水平间距 */
.page-container.data-v-90acde2c {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f7fa;
}
.activity-header-card.data-v-90acde2c {
  background-color: #fff;
  padding: 24rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.activity-header-card .header-title-row.data-v-90acde2c {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.activity-header-card .header-title-row .header-title.data-v-90acde2c {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  margin-left: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.activity-header-card .header-info-row.data-v-90acde2c {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #606266;
}
.activity-header-card .header-info-row.data-v-90acde2c:not(:last-child) {
  margin-bottom: 12rpx;
}
.activity-header-card .header-info-row .info-text.data-v-90acde2c {
  margin-left: 12rpx;
}
.user-list-scroll.data-v-90acde2c {
  flex: 1;
  height: 1px;
}
.user-list.data-v-90acde2c {
  padding: 0 24rpx 24rpx;
}
.user-card.data-v-90acde2c,
.empty-state.data-v-90acde2c {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}
.card-header.data-v-90acde2c {
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f2f5;
}
.avatar.data-v-90acde2c {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
  flex-shrink: 0;
}
.user-info.data-v-90acde2c {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}
.nickname.data-v-90acde2c {
  font-size: 30rpx;
  font-weight: 600;
  color: #303133;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.time.data-v-90acde2c {
  font-size: 24rpx;
  color: #909399;
  margin-top: 8rpx;
}
.status-tag.data-v-90acde2c {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  white-space: nowrap;
  font-weight: 500;
  margin-left: 16rpx;
}
.status-tag.status-pending.data-v-90acde2c {
  background-color: #fdf6ec;
  color: #FF7900;
}
.status-tag.status-confirmed.data-v-90acde2c {
  background-color: #f0f9eb;
  color: #67c23a;
}
.status-tag.status-rejected.data-v-90acde2c, .status-tag.status-refunded.data-v-90acde2c {
  background-color: #fef0f0;
  color: #f56c6c;
}
.status-tag.status-substitute.data-v-90acde2c, .status-tag.status-default.data-v-90acde2c {
  background-color: #f4f4f5;
  color: #909399;
}
.payment-proof.data-v-90acde2c {
  padding: 24rpx 0;
  display: flex;
  align-items: flex-start;
}
.payment-proof .proof-label.data-v-90acde2c {
  font-size: 28rpx;
  color: #606266;
  margin-right: 20rpx;
  line-height: 1.5;
}
.payment-proof .proof-image.data-v-90acde2c {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #eee;
  transition: transform 0.2s;
}
.payment-proof .proof-image.data-v-90acde2c:active {
  transform: scale(0.95);
}
.payment-proof-empty.data-v-90acde2c {
  padding: 40rpx 0;
  font-size: 28rpx;
  color: #909399;
  text-align: center;
}

/* 【新增】驳回原因样式 */
.rejection-reason.data-v-90acde2c {
  display: flex;
  align-items: flex-start;
  background-color: #fef0f0;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-top: 10rpx;
}
.rejection-reason .reason-label.data-v-90acde2c {
  font-size: 26rpx;
  font-weight: 600;
  color: #f56c6c;
  margin: 0 10rpx;
  flex-shrink: 0;
}
.rejection-reason .reason-text.data-v-90acde2c {
  font-size: 26rpx;
  color: #f56c6c;
  line-height: 1.5;
  flex: 1;
}
.card-actions.data-v-90acde2c {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding-top: 20rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f2f5;
}
.btn.data-v-90acde2c {
  margin: 0;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 1px solid transparent;
}
.btn.data-v-90acde2c::after {
  border: none;
}
.btn-reject.data-v-90acde2c {
  background-color: #fff;
  color: #f56c6c;
  border-color: #f56c6c;
}
.btn-confirm.data-v-90acde2c {
  background: linear-gradient(135deg, #FF9500, #FF7900);
  color: #fff;
  border: none;
}
.empty-state.data-v-90acde2c {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #909399;
  margin: 0 24rpx;
}
.empty-text.data-v-90acde2c {
  font-size: 28rpx;
  margin-top: 20rpx;
}
.loading-more.data-v-90acde2c {
  padding: 20rpx 0;
}