/* 使用 SCSS 变量 */
.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 40rpx;
}
.form-container {
  padding: 20rpx;
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.form-group {
  margin-bottom: 20rpx;
}
.form-group .uni-easyinput {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 10rpx;
  margin: 10rpx 0;
}
.form-group .uni-easyinput.is-input-border {
  border: 1rpx solid #eee;
}
.uni-list-cell-db {
  margin-left: 10rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  border: #ffe1d2 solid 1rpx;
  min-width: 500rpx;
}
.uni-list-cell-db .uni-input {
  margin-left: 10rpx;
  font-size: 28rpx;
}
.uni-list-cell-db .uni-input .placeholder {
  color: #939393;
  font-size: 24rpx;
}
.submit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  background: #FF6B00;
  color: white;
  padding: 10rpx;
  font-size: 32rpx;
  border: none;
  border-radius: 8rpx;
  transition: background 0.3s;
}
.submit-btn:active {
  background: #FF8A33;
}
.footer {
  text-align: center;
  color: #666;
  font-size: 26rpx;
  margin-top: 40rpx;
  padding: 0 20rpx;
  color: #717171;
}
 .uni-nav-bar .uni-nav-bar--fixed {
  background-color: white;
  border-bottom: 1rpx solid #eee;
}
 .uni-nav-bar .uni-nav-bar-text {
  font-weight: bold;
  font-size: 18rpx;
}