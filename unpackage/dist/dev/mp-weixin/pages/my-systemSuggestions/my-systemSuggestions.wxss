.hint.data-v-b548d100 {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}
.image-preview.data-v-b548d100 {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 10rpx;
}
.image-wrapper.data-v-b548d100 {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.preview-img.data-v-b548d100 {
  width: 100%;
  height: 100%;
  display: block;
}
.delete-image-btn.data-v-b548d100 {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 0 12rpx 0 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  z-index: 10;
}
.delete-image-btn.data-v-b548d100:active {
  background-color: rgba(0, 0, 0, 0.7);
}
.add-img-placeholder.data-v-b548d100 {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #ccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
  transition: border-color 0.2s ease, color 0.2s ease;
}
.add-img-placeholder.data-v-b548d100:active {
  border-color: var(--4caf15f4);
  color: var(--4caf15f4);
}