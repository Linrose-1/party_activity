}
.textarea-field.data-v-b548d100 {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  padding: 24rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  box-sizing: border-box;
  line-height: 1.6;
}
.char-counter.data-v-b548d100 {
  text-align: right;
  font-size: 24rpx;
  color: #909399;
  margin-top: 10rpx;
}
.tips-section.data-v-b548d100 {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #fff8f2;
  border-radius: 16rpx;
  margin-top: 40rpx;
}
.tips-text.data-v-b548d100 {
  color: var(--4caf15f4);
  font-size: 26rpx;
  margin-left: 16rpx;
}
.submit-button.data-v-b548d100 {
  margin-top: 60rpx;
  background-color: var(--4caf15f4);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 50rpx;
  height: 96rpx;
  line-height: 96rpx;
  transition: opacity 0.3s;
}
.submit-button[disabled].data-v-b548d100 {
  background-color: #fabba0;
  color: #ffffff;
  opacity: 0.7;
}
.submit-button.data-v-b548d100::after {
  border: none;
}

