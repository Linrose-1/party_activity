/* 商机列表特有样式 */
.opportunity-list.data-v-7c9d235a {
  margin-bottom: 40rpx;
}
.opportunity-item.data-v-7c9d235a {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.opportunity-item.data-v-7c9d235a:active {
  opacity: 0.9;
}
.opportunity-header.data-v-7c9d235a {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar.data-v-7c9d235a {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B00, #FF8C37);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 36rpx;
  margin-right: 20rpx;
}
.user-info.data-v-7c9d235a {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.user-name.data-v-7c9d235a {
  font-weight: 600;
  font-size: 30rpx;
  margin-bottom: 6rpx;
}
.post-time.data-v-7c9d235a {
  font-size: 24rpx;
  color: #999;
}
.opportunity-content.data-v-7c9d235a {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  color: #333;
}
.tags.data-v-7c9d235a {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}
.tag.data-v-7c9d235a {
  background: #f0f7ff;
  color: #1890ff;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}
.opportunity-footer.data-v-7c9d235a {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f2f5;
}
.stats.data-v-7c9d235a {
  display: flex;
  gap: 24rpx;
}
.like-count.data-v-7c9d235a,
.comment-count.data-v-7c9d235a {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.like-count text.data-v-7c9d235a,
.comment-count text.data-v-7c9d235a {
  margin-left: 6rpx;
}
.btn-contact.data-v-7c9d235a {
  background-color: #e8f5e9;
  color: #4caf50;
}

/* 状态标签 */
.status-tag.active.data-v-7c9d235a {
  background-color: #e8f5e9;
  color: #4caf50;
}
.status-tag.expired.data-v-7c9d235a {
  background-color: #f5f5f5;
  color: #9e9e9e;
}