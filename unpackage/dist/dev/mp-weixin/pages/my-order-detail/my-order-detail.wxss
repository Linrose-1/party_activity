/* 水平间距 */
.container.data-v-fc3d86e7 {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
  /* 为底部按钮留空 */
}

/* 1. 状态头部 */
.status-header.data-v-fc3d86e7 {
  background-color: #fff;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.status-text.data-v-fc3d86e7 {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
}
.status-sub.data-v-fc3d86e7 {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 驳回卡片 */
.reject-card.data-v-fc3d86e7 {
  background-color: #fff1f0;
  border: 1rpx solid #ffa39e;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.reject-text.data-v-fc3d86e7 {
  color: #ff4d4f;
  font-size: 26rpx;
}

/* 3. 信息卡片通用样式 */
.info-card.data-v-fc3d86e7 {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}
.section-title.data-v-fc3d86e7 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  border-left: 8rpx solid #FF6E00;
  padding-left: 16rpx;
  line-height: 1;
}
.info-row.data-v-fc3d86e7 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  line-height: 1.5;
}
.info-row .label.data-v-fc3d86e7 {
  color: #999;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.info-row .value.data-v-fc3d86e7 {
  color: #333;
  text-align: right;
  word-break: break-all;
}
.info-row .value.bold.data-v-fc3d86e7 {
  font-weight: bold;
}
.info-row .copy-text.data-v-fc3d86e7 {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.info-row .proof-img.data-v-fc3d86e7 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
}
.divider.data-v-fc3d86e7 {
  height: 1rpx;
  background-color: #eee;
  margin: 30rpx 0;
}
.amount-row.data-v-fc3d86e7 {
  margin-top: 10rpx;
  align-items: center;
}
.amount-row .amount.data-v-fc3d86e7 {
  font-size: 40rpx;
  color: #FF6E00;
  font-weight: bold;
}

/* 4. 底部区域 */
.footer-area.data-v-fc3d86e7 {
  margin: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.contact-btn.data-v-fc3d86e7 {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx;
  color: #666;
  font-size: 26rpx;
  background-color: #fff;
  border-radius: 40rpx;
}
.pay-btn.data-v-fc3d86e7 {
  width: 100%;
  background: linear-gradient(135deg, #FF8C00 0%, #FF6E00 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.pay-btn.data-v-fc3d86e7::after {
  border: none;
}
.loading-container.data-v-fc3d86e7 {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
}
.error-box.data-v-fc3d86e7 {
  text-align: center;
  color: #999;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}