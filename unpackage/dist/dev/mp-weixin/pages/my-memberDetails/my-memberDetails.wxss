.page-container.data-v-abc533c5 {
  background-color: #f4f7f9;
  color: #34495e;
}
.content-wrapper.data-v-abc533c5 {
  padding: 40rpx;
}
.header.data-v-abc533c5 {
  text-align: center;
  margin-bottom: 80rpx;
}
.header .title.data-v-abc533c5 {
  display: block;
  font-size: 56rpx;
  font-weight: 800;
  color: #2c3e50;
  margin-bottom: 10rpx;
  letter-spacing: -2rpx;
}
.header .subtitle.data-v-abc533c5 {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
}

/* --- 吸顶导航 --- */
.main-nav.data-v-abc533c5 {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  /* H5和小程序中，如果顶部有原生导航，可能需要 var(--window-top) */
  background-color: rgba(255, 255, 255, 0.85);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  z-index: 100;
