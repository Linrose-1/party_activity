/* --- 会员卡片 --- */
.membership-tiers.data-v-abc533c5 {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}
.card.data-v-abc533c5 {
  background-color: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.07);
  display: flex;
  flex-direction: column;
  overflow: hidden;
  border: 1rpx solid #e5e7eb;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.card.data-v-abc533c5:active {
  transform: translateY(-10rpx);
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.1);
}
.card-header.data-v-abc533c5 {
  padding: 40rpx 30rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}
.card-icon.data-v-abc533c5 {
  margin: 0 auto 30rpx;
  width: 128rpx;
  height: 128rpx;
}
.card-title.data-v-abc533c5 {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
}
.card-price.data-v-abc533c5 {
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 10rpx;
}
.card-price .term.data-v-abc533c5 {
  font-size: 26rpx;
  font-weight: 400;
  opacity: 0.8;
}
.card-body.data-v-abc533c5 {
  padding: 30rpx;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
.benefits-title.data-v-abc533c5 {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 15rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #2c3e50;
}
.benefits-list.data-v-abc533c5 {
  padding: 0;
  margin: 0;
}
.benefits-list li.data-v-abc533c5 {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
}
.benefits-list li.data-v-abc533c5::before {
  content: "✓";
  color: #2ecc71;
  margin-right: 15rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-top: 6rpx;
}
.initial-values.data-v-abc533c5 {
  list-style: none;
  padding: 20rpx;
  margin: 0 0 20rpx 0;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
}
.initial-values li.data-v-abc533c5 {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.initial-values li.data-v-abc533c5:last-child {
  margin-bottom: 0;
}
.initial-values .value.data-v-abc533c5 {
  font-weight: 600;
}
.initial-values .calc.data-v-abc533c5 {
  font-size: 24rpx;
  color: #7f8c8d;
}
.card-footer.data-v-abc533c5 {
  padding: 30rpx;
  margin-top: auto;
}
.btn.data-v-abc533c5 {
  display: block;
  width: 100%;
  padding: 24rpx 20rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  text-decoration: none;
}
.btn.data-v-abc533c5::after {
  border: none;
}

