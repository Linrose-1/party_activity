/* 样式部分无需修改，此处省略，请沿用您之前的样式 */
.page.data-v-d21abf49 {
  background-color: #f8f8f8;
  padding-bottom: 160rpx;
}
.top-nav.data-v-d21abf49 {
  background-color: #FF6F00;
  color: #fff;
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
  font-size: 32rpx;
}
.page-title.data-v-d21abf49 {
  flex: 1;
  text-align: center;
  font-weight: bold;
}
.form-section.data-v-d21abf49 {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.05);
}
.section-title.data-v-d21abf49 {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6F00;
  margin-bottom: 20rpx;
  border-left: 10rpx solid #FF6F00;
  padding-left: 20rpx;
}
.uni-list-cell-db.data-v-d21abf49 {
  margin-left: 10rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  border: #e2e2e2 solid 1rpx;
  min-width: 400rpx;
  border-radius: 10rpx;
}
.uni-list-cell-db .uni-input.data-v-d21abf49 {
  margin-left: 10rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.uni-list-cell-db .uni-input .placeholder.data-v-d21abf49 {
  color: #939393;
}
.uni-list-cell-db .uni-input .arrow.data-v-d21abf49 {
  color: #999;
  font-size: 32rpx;
}
.cover-upload.data-v-d21abf49 {
  border: 2rpx dashed #ccc;
  border-radius: 16rpx;
  background-color: #fafafa;
  color: #999;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  /* 水平居中 */
  overflow: hidden;
  cursor: pointer;
}
.cover-upload text.data-v-d21abf49 {
  font-size: 28rpx;
}
.cover-upload image.data-v-d21abf49 {
  width: 100%;
  height: 100%;
}
.activity-item.data-v-d21abf49 {
  margin: 20rpx 0;
  background-color: #f9f9f9;
  border-radius: 16rpx;
  padding: 20rpx;
}
.input-group.data-v-d21abf49 {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  position: relative;
}
.input-group .uni-icons.data-v-d21abf49 {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 40rpx !important;
}
.input-group uni-easyinput.data-v-d21abf49 .uni-easyinput__content {
  padding-right: 60rpx;
}
.add-btn.data-v-d21abf49 {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FF6F00;
  font-weight: bold;
  margin-top: 20rpx;
  gap: 10rpx;
}
.action-bar.data-v-d21abf49 {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  z-index: 999;
}
.action-btn.data-v-d21abf49 {
  flex: 1;
  margin: 10rpx;
  padding: 24rpx;
  text-align: center;
  border-radius: 16rpx;
  font-weight: bold;
  font-size: 28rpx;
}
.save-btn.data-v-d21abf49 {
  background-color: #f0f0f0;
  color: #666;
}
.publish-btn.data-v-d21abf49 {
  background-color: #FF6F00;
  color: #fff;
}
.search-bar.data-v-d21abf49 {
  margin-bottom: 20rpx;
}
.shop-list.data-v-d21abf49 {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  max-height: 300rpx;
  /* 设置最大高度并允许滚动 */
  overflow-y: auto;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}
.shop-item.data-v-d21abf49 {
  padding: 20rpx;
  background-color: #f0f0f0;
  border-radius: 16rpx;
  font-size: 28rpx;
  cursor: pointer;
}
.shop-item.data-v-d21abf49:active {
  background-color: #e0e0e0;
}
.shop-item.selected.data-v-d21abf49 {
  background-color: #FF6F00;
  color: #fff;
  font-weight: bold;
}
.selected-shop.data-v-d21abf49 {
  margin-top: 20rpx;
  color: #666;
  font-size: 26rpx;
}

/* 修复 uni-data-select 样式可能不一致的问题 */
.data-v-d21abf49 .uni-select {
  font-size: 28rpx !important;
}
.data-v-d21abf49 .uni-select__input-text {
  color: #333;
}
.data-v-d21abf49 .uni-select__input-placeholder {
  color: #939393;
}

/* 【新增】这个类用于在 picker 打开时降低操作栏的层级 */
.action-bar.z-index-low.data-v-d21abf49 {
  z-index: 1;
  /* 或者 z-index: auto; */
}
.action-btn.disabled.data-v-d21abf49 {
  opacity: 0.6;
  pointer-events: none;
  /* 让按钮在视觉和行为上都真正被禁用 */
}