/* 水平间距 */
.store-card.data-v-8cae2ec5 {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  /* Flex 布局实现左图右文 */
  gap: 24rpx;
  /* 图片和内容的间距 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}
.store-card.data-v-8cae2ec5:active {
  background-color: #f9f9f9;
}

/* 左侧图片 */
.card-image-wrapper.data-v-8cae2ec5 {
  width: 180rpx;
  height: 180rpx;
  flex-shrink: 0;
  /* 防止被压缩 */
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  background-color: #f5f5f5;
}
.card-image.data-v-8cae2ec5 {
  width: 100%;
  height: 100%;
}

/* 右侧内容 */
.card-content.data-v-8cae2ec5 {
  flex: 1;
  min-width: 0;
  /* 关键：允许子元素在 flex 容器中收缩 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 1. 头部 */
.card-header.data-v-8cae2ec5 {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}
.store-name.data-v-8cae2ec5 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  /* 限制店名最多显示1行，超出省略 (美团风格通常是单行) */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
  margin-right: 10rpx;
}
.distance-badge.data-v-8cae2ec5 {
  font-size: 22rpx;
  color: #666;
  flex-shrink: 0;
  padding-top: 4rpx;
  /* 微调对齐 */
}

/* 2. 描述 */
.card-body.data-v-8cae2ec5 {
  flex: 1;
  margin-bottom: 12rpx;
}
.store-desc.data-v-8cae2ec5 {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  /* 限制显示两行，超出省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 3. 底部 */
.card-footer.data-v-8cae2ec5 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price-info.data-v-8cae2ec5 {
  font-size: 24rpx;
  color: #ff6b00;
  font-weight: 500;
}
.action-buttons.data-v-8cae2ec5 {
  display: flex;
  gap: 16rpx;
}
.btn.data-v-8cae2ec5 {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 空心按钮样式 (发起聚会) */
.btn-outline.data-v-8cae2ec5 {
  border: 1rpx solid #ff6b00;
  color: #ff6b00;
  background-color: transparent;
}

