/* 水平间距 */
.edit-popup-container.data-v-a5c11758 {
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  padding: 30rpx;
}
.popup-header.data-v-a5c11758 {
  text-align: center;
  margin-bottom: 30rpx;
}
.popup-header .title.data-v-a5c11758 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.target-info.data-v-a5c11758 {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.target-info .highlight.data-v-a5c11758 {
  color: #FF8500;
  font-weight: bold;
  margin: 0 6rpx;
}
.review-textarea.data-v-a5c11758 {
  width: 100%;
  height: 240rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}
.word-count.data-v-a5c11758 {
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}
.popup-footer.data-v-a5c11758 {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}
.popup-footer .btn.data-v-a5c11758 {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.popup-footer .btn.data-v-a5c11758::after {
  border: none;
}
.popup-footer .cancel-btn.data-v-a5c11758 {
  background-color: #f5f5f5;
  color: #666;
}
.popup-footer .save-btn.data-v-a5c11758 {
  background: linear-gradient(to right, #FF8500, #FF6B00);
  color: #fff;
}
.action-buttons.data-v-a5c11758 {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}
.action-buttons .action-btn.data-v-a5c11758 {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  border-radius: 12rpx;
  background: #f9f9f9;
  border: 2rpx solid transparent;
  transition: all 0.2s;
  font-size: 26rpx;
  gap: 8rpx;
}
.action-buttons .action-btn.like-btn.active.data-v-a5c11758 {
  background-color: #FF8500;
  border-color: #FF8500;
  color: #fff;
}
.action-buttons .action-btn.dislike-btn.active.data-v-a5c11758 {
  background-color: #666;
  border-color: #666;
  color: #fff;
}

