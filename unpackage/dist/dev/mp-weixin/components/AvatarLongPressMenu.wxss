.menu-card.data-v-5571075f {
  width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
}
.card-header.data-v-5571075f {
  background: linear-gradient(135deg, #FF7009, #FF9A44);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.avatar-wrapper.data-v-5571075f {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
  overflow: hidden;
  margin-right: 24rpx;
}
.menu-avatar.data-v-5571075f {
  width: 100%;
  height: 100%;
}
.user-info.data-v-5571075f {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.user-name.data-v-5571075f {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}
.user-desc.data-v-5571075f {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}
.close-icon.data-v-5571075f {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx;
  opacity: 0.8;
}

/* --- 2x2 网格布局修改 --- */
.action-grid.data-v-5571075f {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  /* 改为2列 */
  gap: 40rpx;
  /* 增加间距 */
  padding: 50rpx 40rpx;
}
.grid-item.data-v-5571075f {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.grid-item.data-v-5571075f:active {
  opacity: 0.8;
  transform: scale(0.98);
}
.icon-box.data-v-5571075f {
  width: 110rpx;
  /* 稍微加大图标区域 */
  height: 110rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 申请入圈 (实心橙色) */
.grid-item.primary .icon-box.data-v-5571075f {
  background: linear-gradient(135deg, #FF7009, #FF8C00);
  box-shadow: 0 6rpx 16rpx rgba(255, 112, 9, 0.3);
}

/* 邀请入圈 (空心/浅橙色描边风格) */
.grid-item.primary-outline .icon-box.invite-style.data-v-5571075f {
  background-color: #fff;
  border: 2rpx solid #FF7009;
  color: #FF7009;
}

/* 查看名片 */
.icon-box.secondary.data-v-5571075f {
  background-color: #FFF3E0;
}

/* 点评 */
.icon-box.normal.data-v-5571075f {
  background-color: #f5f5f5;
}
.grid-item.disabled.data-v-5571075f {
  pointer-events: none;
}
.grid-item.disabled .icon-box.data-v-5571075f {
  background-color: #dcdcdc;
  box-shadow: none;
  border: none;
}
.grid-item.disabled .item-text.data-v-5571075f {
  color: #999;
}
.item-text.data-v-5571075f {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}