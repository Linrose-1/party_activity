/* 水平间距 */
.menu-card.data-v-5571075f {
  width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
}

/* 头部样式 */
.card-header.data-v-5571075f {
  background: linear-gradient(135deg, #FF7009, #FF9A44);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.avatar-wrapper.data-v-5571075f {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
  overflow: hidden;
  margin-right: 24rpx;
}
.menu-avatar.data-v-5571075f {
  width: 100%;
  height: 100%;
}
.user-info.data-v-5571075f {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.user-name.data-v-5571075f {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}
.user-desc.data-v-5571075f {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}
.close-icon.data-v-5571075f {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx;
  opacity: 0.8;
}

/* 操作网格样式 */
.action-grid.data-v-5571075f {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  /* 3列布局 */
  gap: 30rpx;
  padding: 40rpx 30rpx 50rpx;
}
.grid-item.data-v-5571075f {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.grid-item.data-v-5571075f:active {
  opacity: 0.8;
  transform: scale(0.98);
}
.icon-box.data-v-5571075f {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮风格 */
.grid-item.primary .icon-box.data-v-5571075f {
  background: linear-gradient(135deg, #FF7009, #FF8C00);
  box-shadow: 0 6rpx 16rpx rgba(255, 112, 9, 0.3);
}
.icon-box.secondary.data-v-5571075f {
  background-color: #FFF3E0;
  /* 浅橙色 */
}
.icon-box.normal.data-v-5571075f {
  background-color: #f5f5f5;
}
.icon-box.danger.data-v-5571075f {
  background-color: #FFF0F0;
}
.item-text.data-v-5571075f {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}