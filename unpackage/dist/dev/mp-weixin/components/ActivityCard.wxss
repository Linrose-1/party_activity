  display: flex;
  gap: 24rpx;
  /* 恢复按钮间距 */
}

/* 基础按钮样式 */
.btn.data-v-f73ae0ce {
  padding: 4rpx 24rpx;
  border-radius: 12rpx;
  font-weight: 500;
  font-size: 28rpx;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  transition: all 0.3s;
}
.btn text.data-v-f73ae0ce {
  margin-left: 10rpx;
}

