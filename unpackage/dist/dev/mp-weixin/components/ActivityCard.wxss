}
.status-tag.ended.data-v-f73ae0ce {
  background-color: #f0f2f5;
  color: #909399;
}
.status-tag.refund_pending.data-v-f73ae0ce {
  background-color: #ecf5ff;
  color: #409eff;
}
.status-tag.canceled.data-v-f73ae0ce {
  background-color: #fef0f0;
  color: #f56c6c;
}
